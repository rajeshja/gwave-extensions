<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
	<ModulePrefs title="Gadget Testing" height="120">
		<Require feature="wave" /> 
	</ModulePrefs>
	<Content type="html">
    <![CDATA[ 
			<style>
			
				#content_div {
					background: #ddddcc;
					height: 150px;
				}
				
				.gadget_table {
					font-size: 0.8em;
					margin: 0;
					padding: 0;
				}

				.gadget_table td, .gadget_table th {
					border: solid black 1px;
					margin: 0;
					padding: 0;
				}
				
				.gadget_footer {
					clear: both;
				}
				
			</style>
      <div id="content_div">
				<table class="gadget_table">
					<tr><th>Participant</th><th>Choice</th></tr>
					<tr><th>You</th><th>Yes</th></tr>
					<tr><th>Me</th><th>No</th></tr>
					<tr><th>Him</th><th>Maybe</th></tr>
				</table>
				<form style="clear: both; display: block;">
					<input type="radio" name="choice" value="Yes"/> Yes 
					<input type="radio" name="choice" value="No"/> No 
					<input type="radio" name="choice" value="Maybe"/> Maybe<br/>
					<br/><br/>
				</form>
				<div class="gadget_footer"/>
			</div>
    ]]>
    </Content>
</Module>